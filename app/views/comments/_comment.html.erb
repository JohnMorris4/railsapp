<% @post.comments.each do |comment| %>
    <div class="well">
        <p>
            <strong>UserName: 
                <%= comment.username %>
            </strong>
        </p>
        <p> Comment: 
            <%= comment.body %>
            <%= link_to '[X]', [comment.post, comment],
                                method: :delete,
                                data: {confirm: 'Are you sure???'}
            %>
        </p>
    </div>
<% end %>
